block product-section
    .product-section
        .anchor-section
            .container
                .anchor-list
                    .anchor
                        img(class="anchor__img" src="img/picture-pellety-1.jpg")
                        .anchor__title Пеллеты
                        a(class="btn anchor__link" href="#pellety") Подробнее

                    .anchor
                        img(class="anchor__img" src="img/picture-brikety-1.jpg")
                        .anchor__title Брикеты
                        a(class="btn anchor__link" href="#brikety") Подробнее

        .pellety#pellety
            .container

                h2.title.title_h2
                    span.title__text Пеллеты
                    span.title__divider

                .product-list
                    .product.product-list__item
                        .column
                            .product__img-wrap
                                img(class="product__img" src="img/picture-pellety-2.jpg")
                            .product__title Пеллеты белые DIN + 6 мм
                            .product__price 7 350 руб.
                            .product__characteristic Цвет - Белые
                            .product__characteristic Упаковка - Мешки 15 кг
                        a(class="btn product__anchor" href="#pellety-belye-din-6-mm") Купить

                    .product.product-list__item
                        .column
                            .product__img-wrap
                                img(class="product__img" src="img/picture-pellety-3.jpg")
                            .product__title Пеллеты белые DIN + 8 мм
                            .product__price 6 970 руб.
                            .product__characteristic Цвет - Белые
                            .product__characteristic Упаковка - Биг-Бэг 1 тонна
                        a(class="btn product__anchor" href="#pellety-belye-din-8-mm") Купить

                    .product.product-list__item
                        .column
                            .product__img-wrap
                                img(class="product__img" src="img/picture-pellety-4.jpg")
                            .product__title Пеллеты серые DIN + 8 мм
                            .product__price 6 500 руб.
                            .product__characteristic Цвет - Серые
