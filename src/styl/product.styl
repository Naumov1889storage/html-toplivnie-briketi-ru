.product {
  position: relative
  display: flex
  flex-direction: column
  justify-content: space-between
  align-items: center
  text-align: center

  min-width: 270px
  max-width: 385px
  width: 270px
  padding: 229px 27px 30px 27px
  color: #3a3535

  border-radius: 5px
  border: 1px solid #e5e5e5

  &:hover {
    background-color: #ffffff
    border-color: transparent
    box-shadow: 0 23px 29px rgba(0, 0, 0, 0.05)
  }

  &__img-wrap {
    position: absolute
    top: 0
    left: 0
    display: flex
    align-items: center
    justify-content: center
    width: 100%
    height: 210px
    border-radius: 5px 5px 0 0
    background: #ffffff
  }

  &__img {
    border-radius: 5px 5px 0 0
  }

  &__title {
    margin-bottom: 16px
    font-size: 22px
    font-weight: 500
    letter-spacing: 0.33px
  }

  &__price {
    margin-bottom: 16px
    font-size: 25px
    font-weight: 700
    letter-spacing: 0.38px
    color: #47c53b
  }

  &__characteristic {
    margin-bottom: 15px
    font-size: 17px
    font-weight: 400
  }

  &__anchor {
    margin-top: 18px
  }
}