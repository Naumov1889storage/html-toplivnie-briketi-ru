.footer {
  padding: 28px 0 33px 0

  &__first-row {
    display: flex
    justify-content: space-between
    align-items: center
    flex-wrap: wrap
    margin: -15px 0
  }

  &__logo.logo {
    margin: 15px 15px 15px 0
    width: 470px
    .logo__img {
      width: 59px
      height: 77px
    }
    .logo__text {
      margin-left: 27px
    }
    .logo__title {
      font-size: 26px
    }
    .logo__subtitle {
      font-size: 16px
    }
  }

  &__docs {
    display: flex
    flex-direction: column
    align-items: center
  }

  &__privacy,
  &__agreement {
    margin: 7px 15px
    color: #515151
    font-size: 15px
    line-height: 24px
    text-decoration: underline

    &:hover {
      text-decoration: none
    }
  }

  &__author {
    margin: 15px 0 15px 15px
    width: 135px
    text-align: right
  }

  &__copyright {
    margin-top: 40px
  }
}

.author {
  font-size: 15px
  line-height: 20px
  letter-spacing: 0.38px
  color: #141414

  &__link {
    color: #008ea9
    text-decoration: underline

    &:hover {
      text-decoration: none
    }
  }
}

.copyright {
  text-align: center
  color: #676767
  font-size: 14px
  font-weight: 300
  line-height: 24px
}

@media (max-width: 950px) {
  .footer {
    &__logo.logo {
      width: 255px
      .logo__text {
        margin-left: 18px
      }
      .logo__title {
        font-size: 20px
      }
      .logo__subtitle {
        font-size: 12px
      }
      .text_color_primary {
        display: block
      }
      .logo__dash {
        display: none
      }
    }
  }
}

@media (max-width: 720px) {
  .footer {
    &__first-row {
      flex-direction: column
      align-items: flex-start
    }

    &__docs {
      margin: 5px 0 0 0
      align-items: flex-start
    }

    &__privacy,
    &__agreement {
      margin: 4px 0
      font-size: 14px
    }

    &__author {
      margin-top: 7px
      margin-left: 0
      width: auto
      font-size: 14px
    }
    
    &__copyright {
      margin-top: 25px
      text-align: left
      font-size: 13px
    }
  }
}