.promo {
  position: relative
  height: 463px
  padding: 30px 0
  color: #ffffff
  background: black url("../img/bg-promo.jpg") top right
  background-size: cover
  text-align: center
  &:before {
    content: ''
    position: absolute
    top: 0
    right: 0
    width: 100%
    height: 100%
    background: rgba(0,0,0,.73)
  }

  &__container {
    position: relative
    z-index: 1
    display: flex
    flex-direction: column
    justify-content: center
  }

  &__title {
    margin: 12px 0
    font-weight: 500
    font-size: 36px
    letter-spacing: 0.55px
  }

  &__p {
    margin: 12px 0
    font-size: 40px
    font-weight: 900
    letter-spacing: 0.61px
  }
}

@media (max-width: 1050px) {
  .promo {
    height: 380px
    &__title {
      font-size: 28px
    }
    &__p {
      font-size: 32px
    }
  }
}

@media (max-width: 900px) {
  .promo {
    height: 300px
    &__title {
      font-size: 22px
      letter-spacing: 0.35px

    }
    &__p {
      font-size: 25px
      letter-spacing: 0.50px
    }
  }
}

@media (max-width: 750px) {
  .promo {
    &__title {
      font-size: 20px
      letter-spacing: 0.25px

    }
    &__p {
      font-size: 22px
      letter-spacing: 0.40px
    }
  }
}

@media (max-width: 500px) {
  .promo {
    min-height: 280px
    height: auto
    &__title {
      font-size: 16px
    }
    &__p {
      font-size: 18px
      font-weight: 600
      letter-spacing: 0.30px
    }
  }
}